<div class="passwords">
    {{#each passwords}}
    <article class="card">
        <div class="card-header flex-row justify-space-between">
            <h2>
                <a href="/password/{{id}}">{{title}}</a>
            </h2>
            <div>
                Posted by {{User.username}} on {{format_date createdAt}}
            </div>
        </div>
        <div class="card-body">
            {{body}}
        </div>
    </article>
    {{/each}}
</div>