<body>
    <main class="col-auto">
        {{!-- {{{body}}} --}}
        <h1>Hello, {{username}}</h1>
        <!-- Modal HTML -->
        <div id="myModal" class="modal" tabindex="-1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Store a new password</h5>
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label>Title</label>
                            <div>
                                <input id="website-title" class="form-control" type="text" placeholder=" ex. 'Google' ">
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Email</label>
                            <div>
                                <input id="website-email" class="form-control" type="text"
                                    placeholder="your email">
                            </div>
                        </div>
                         <div class="form-group">
                            <label>Username</label>
                            <div>
                                <input id="website-username" class="form-control" type="text" placeholder="your username">
                            </div>
                        </div>
                         <div class="form-group">
                            <label>Password</label>
                            <div>
                                <input id="website-password" class="form-control" type="text" placeholder="your password">
                            </div>
                        </div>
                         <div class="form-group">
                            <label>URL</label>
                            <div>
                                <input id="website-url" class="form-control" type="text" placeholder="url">
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                        <button id="saveBtn" type="button" class="btn btn-primary">Save</button>
                    </div>
                </div>
            </div>
        </div>



        <!-- Rows of Passwords -->

        <div class="container container-color">
            <div class="row">
                <!-- Button HTML (to Trigger Modal) -->
                <div class="col-3 align-self-center">
                    <button type="button" class=" btn modalbtn btn-primary">Store New Password</button>
                </div>
                {{#each password}}
                {{> single-password password}}
                <div class="col-9">
                    <div class="row my-1 row-color ">
                        <p class="text-center text-white my-1 collapsible">{{password.title}}</p>
                        <p class="content">password: testing</p>
                    </div>
                {{/each}}  
                   
                </div>
            </div>
        </div>
    </main>

    <footer class="footer flex-row justify-center">
        <a href="/new-password">âž• New Password</a>
    </footer>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
        integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/js/bootstrap.min.js"
        integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
        crossorigin="anonymous"></script>
    <script src="/javascript/dashboard.js"></script>
</body>

