<div class="post card">
    <div class="card-header">
        <h2>Edit Post</h2>
    </div>
    <form id="edit-post-form" class="card-body">
        <input type="hidden" name="post-id" value="{{post.id}}" />

        <label class="form-label" for="post-title">Website Title</label>
        <input type="text" name="post-title" value="{{post.title}}" class="form-input" />

        <label class="form-label" for="post-body">Password</label>
        <textarea name="post-body" class="form-input">{{post.body}}</textarea>

        <button type="submit" class="btn update-btn">Update</button>

        <button type="button" id="delete-btn" class="btn delete-btn">Delete</button>
    </form>
</div>

<script src="/javascript/edit.js"></script>