<div class="container">
<div class="card">
    <div class="card-header">
        <h2>Login</h2>
    </div>
    <form class="login-form" class="card-body">
        <div>
            <label for="username-input-login">Username</label>
            <input type="text" id="username-input-login" />
        </div>
        <div>
            <label for="password-input-login" class="form-label">Password</label>
            <input type="password" is="password-toggle"  id="password-input-login" />
        </div>
        <button type="submit" id="login-btn" class="btn">Login</button>
        <a class= "signupBtn" type="button" href="/signup">Sign up</a>
    </form>
</div>

 <img class="flex-row justify-center image"  src="/images/signin.svg" alt="login image">
</div>


<script type="module" defer src="https://unpkg.com/custom-element-password-toggle"></script>

<script src="/javascript/login.js"></script>